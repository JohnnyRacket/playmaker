{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks":[
        {
            "taskName": "tsc",
            "command": "tsc",
            "isBuildCommand": true,
            "args": ["-p", "."],
            "showOutput": "always",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "webpack",
            "command": "./node_modules/.bin/webpack",
            "args": ["js/index.js", "dist/bundle.js"]
        }
    ]
    
}